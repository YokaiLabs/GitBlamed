---
import Layout from "../layouts/Layout.astro";
import Window from "../components/Window.astro";
---

<Layout title="GitBlamed">
  <div
    class="fixed top-0 left-0 flex h-8 w-full items-center justify-between border-b-2 border-slate-700 bg-slate-600 p-1 drop-shadow-lg drop-shadow-emerald-800"
  >
    <div class="flex space-x-1">
      <div
        class="flex h-6 w-6 items-center justify-center rounded-full bg-slate-700"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-3 w-3 text-slate-100"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"
          ></path>
        </svg>
      </div>
      <div
        class="flex h-6 w-48 items-center space-x-1 rounded-full bg-slate-700 px-2.5 text-xs text-slate-100"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-4 w-4 text-slate-100"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M14.25 9.75 16.5 12l-2.25 2.25m-4.5 0L7.5 12l2.25-2.25M6 20.25h12A2.25 2.25 0 0 0 20.25 18V6A2.25 2.25 0 0 0 18 3.75H6A2.25 2.25 0 0 0 3.75 6v12A2.25 2.25 0 0 0 6 20.25Z"
          ></path>
        </svg>
        <span> Play GitBlamed</span>
      </div>
    </div>
    <div class="flex h-6 items-center space-x-2 rounded-full bg-slate-700 px-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-4 w-4 text-slate-100"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0M3.124 7.5A8.969 8.969 0 0 1 5.292 3m13.416 0a8.969 8.969 0 0 1 2.168 4.5"
        ></path>
      </svg>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-4 w-4 text-slate-100"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M21 10.5h.375c.621 0 1.125.504 1.125 1.125v2.25c0 .621-.504 1.125-1.125 1.125H21M4.5 10.5h6.75V15H4.5v-4.5ZM3.75 18h15A2.25 2.25 0 0 0 21 15.75v-6a2.25 2.25 0 0 0-2.25-2.25h-15A2.25 2.25 0 0 0 1.5 9.75v6A2.25 2.25 0 0 0 3.75 18Z"
        ></path>
      </svg>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-4 w-4 text-slate-100"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M8.288 15.038a5.25 5.25 0 0 1 7.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 0 1 1.06 0Z"
        ></path>
      </svg>
    </div>
  </div>

  <Window id="pgb-window" title="Play GitBlamed">
    <h1 class="align-middle font-[VT323] text-7xl">GITBLAMED</h1>
    <h2 class="text-xl">(Programming Social Deduction Game)</h2>
    <div>
      <button
        class="w-24 cursor-pointer rounded-full border-2 border-slate-700 bg-slate-600 text-slate-100 hover:border-slate-600 hover:bg-slate-500 hover:text-slate-200"
        >About</button
      >
      <button
        class="w-24 cursor-pointer rounded-full border-2 border-slate-700 bg-slate-600 text-slate-100 hover:border-slate-600 hover:bg-slate-500 hover:text-slate-200"
        >Play</button
      >
    </div>
  </Window>
  <script>
    import { setupMovableWindow } from "../lib/window.ts";

    const pgb = document.getElementById("pgb-window");

    if (pgb instanceof HTMLDivElement) {
      setupMovableWindow(pgb);
    }
  </script>
</Layout>
